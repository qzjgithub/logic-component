.DateRangepicker{
  & > .list {
    display: none;
    color: #ffffff;
    position: absolute;
    z-index: 99;
    border:1px solid #28c6de;
    background-color: #001920;
    .Calendar{
      border: 0;
      display: inline-block;
      vertical-align: top;
    }
    .Calendar:first-child{
      margin-right: 5px;
    }
  }
  & > .quick-switch {
    cursor: pointer;
    & > svg {
      vertical-align: sub;
    }
  }
  & > .text {
    min-width: 200px;
    text-align: left;
    position: relative;
    padding-right: 30px;
    &>span{
      margin-right: 14px;
      white-space: nowrap;
    }
    &>svg{
      position: absolute;
      top: 5px;
      right: 3px;
    }
    &>.date-clear{
      top: 5px;
      opacity: 0;
    }
  }
  & > .text:hover{
    &>svg{
      opacity: 1;
    }
    &>.date-clear + svg{
      display: none;
    }
  }
  &.opened{
    & > .list{
      display: block;
    }
  }
  .control{
    margin: 0;
    margin-bottom: 5px;
    text-align: right;
    line-height: 30px;
    padding: 0 2px;
    & > a{
      cursor: pointer;
      margin-right: 5px;
    }
    & > .cleard {
      float: left;
    }
  }
}