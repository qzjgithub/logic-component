lineColor = #116d75;
.Dialog{
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.3);
  height: 100%;
  width: 100%;
  display: table;
  &>div{
    display: table-cell;
    vertical-align: middle;
  }
  &>div>article{
    text-align: left;
    margin: auto;
    min-width: 300px;
    min-height: 100px;
    width: 300px;
    background-color: #0c5259;
    border-radius: 4px;
    border: 1px solid lineColor;
    display: flex;
    flex-direction: column;
  }
  div.content{
    &>p{
      margin: 0;
      padding: 5px 10px 10px 10px;
    }
    flex: auto;
  }
  header.title{
    border-bottom: 1px solid lineColor;
    line-height: 26px;
    padding: 10px 10px 5px 10px;
  }
  .cross-close{
    cursor: pointer;
    float: right;
  }
  .cross-close:hover{
    opacity: 0.6;
  }
}
.Dialog.hide{
  display: none;
}