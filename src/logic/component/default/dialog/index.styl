lineColor = #116d75;
.Dialog{
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.3);
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing : border-box;
  z-index: 10;
  &>div{
    height: 100%;
    flex: auto;  
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
  }
  &>div>article{
    text-align: left;
    margin: auto;
    min-width: 300px;
    min-height: 100px;
    width: 300px;
    background-color: #0c5259;
    border-radius: 4px;
    border: 1px solid lineColor;
    display: flex;
    flex-direction: column;
    overflow: auto;
  }
  div.content{
    overflow: auto;
    padding-bottom: 50px;
    flex: auto;
    position: relative;
    &>p{
      margin: 0;
      padding: 5px 10px 10px 10px;
    }
  }
  header.title{
    border-bottom: 1px solid lineColor;
    line-height: 26px;
    padding: 10px 10px 5px 10px;
  }
  .cross-close{
    cursor: pointer;
    float: right;
  }
  .cross-close:hover{
    opacity: 0.6;
  }
}
.Dialog.penetrate{
  pointer-events: none;
  background-color: transparent;
  &>div>article{
    pointer-events: all;
  }
}
.Dialog.draggable{
  header.title{
    cursor: all-scroll;
  }
  &>div>article{
    position: relative;
  }
}
.Dialog.hide{
  display: none;
}